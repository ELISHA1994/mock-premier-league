{
  "name": "mockpremierleague",
  "version": "1.0.0",
  "description": "API that serves the latest scores of fixtures of matches in a “Mock Premier League”",
  "main": "dist/server.js",
  "scripts": {
    "start": "tsc && cross-env DEBUG=server:* node ./dist/server.js",
    "dev": "cross-env NODE_ENV=production DEBUG=server:* ts-node ./src/server.ts",
    "build": "tsc -p .",
    "start:dev": "cross-env DEBUG=server:* nodemon ./src/server.ts",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles -c ./jest.unit.json",
    "test:coverage": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage -c ./jest.unit.json",
    "seed": "tsc && cross-env DEBUG=server:* node dist/database/seeders/users.js",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.18",
    "@types/response-time": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.1",
    "mongoose-paginate": "^5.0.3",
    "mongoose-unique-validator": "^3.0.0",
    "morgan": "^1.10.0",
    "redis": "^4.0.3",
    "response-time": "^2.3.2",
    "rotating-file-stream": "^3.0.2"
  }
}
